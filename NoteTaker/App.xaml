<Application x:Class="NoteTaker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NoteTaker"
             Startup="Application_Startup"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/AppTheme.xaml" />
                <ResourceDictionary Source="/Themes/MenuItemTheme.xaml" />
                <ResourceDictionary Source="/Themes/MenuTheme.xaml" />
                <ResourceDictionary Source="/Themes/TextEditorTheme.xaml" />
                <ResourceDictionary Source="/Themes/ButtonTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
