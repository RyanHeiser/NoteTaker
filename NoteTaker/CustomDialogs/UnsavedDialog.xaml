<Window x:Class="NoteTaker.UnsavedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTaker"
        mc:Ignorable="d"
        Background="{StaticResource DarkBackground}"
        Title="NoteTaker" Width="350" Height="125" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <DockPanel>
        <TextBlock Margin="5 5 5 5" FontSize="14" Foreground="{StaticResource TextColor}" Name="promptText" DockPanel.Dock="Top">Do you want to save changes to</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Height="30" Margin="5" Name="SaveButton" IsDefault="True" Click="Save_Click">_Save</Button>
            <Button Width="100" Height="30" Margin="5" Name="DontSaveButton" Click="DontSave_Click">_Don't Save</Button>
            <Button Width="100" Height="30" Margin="5" Name="CancelButton" IsCancel="True" Click="Cancel_Click">_Cancel</Button>
        </StackPanel>
    </DockPanel>
</Window>
